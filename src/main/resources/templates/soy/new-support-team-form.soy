{namespace JIRA.Templates.AssignEscalate}
/**
 * Displays the new team form
 * @param projectId
 * @param roles
 * @param components
 */
{template .newSupportTeam}
  <form action="#" method="post" id="newTeam" class="aui">
    <fieldset>
    	<input hidden="true" id="prj_id" name="prj_id" value="{$projectId}"/>
        <div class="field-group">
            <label for="name">Team Name<span class="aui-icon icon-required"> required</span></label>
            <input class="text" type="text" id="name" name="name" title="name">
            <div class="description">Meaningful name for this team</div>
        </div>
        <div class="field-group">
            <label for="dBase">Project Role<span class="aui-icon icon-required"> required</span></label>
            <select class="select" id="role" name="role" title="Role">
		        {foreach $role in $roles}
		        <option>{$role.name}</option>
		        {/foreach}                
            </select>            
            <div class="description">Select the team role the list of available users should come from.</div>
        </div>
        <div class="field-group">
            <label for="dBase">Components (optional)</label>
            <select class="multi-select" multiple="multiple" id="component" name="components" title="Component">
		        {foreach $component in $components}
		        <option value="{$component.id}">{$component.name}</option>
		        {/foreach}                
            </select>            
            <div class="description">Used if the transition is set to try and match components first.</div>
        </div>
        
   </fieldset>
 </form>
{/template}